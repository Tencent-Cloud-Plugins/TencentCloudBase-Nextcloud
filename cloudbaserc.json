{
  "version": "2.0",
  "envId": "{{env.ENV_ID}}",
  "framework": {
    "name": "Nextcloud",
    "plugins": {
      "client": {
        "use": "@cloudbase/framework-plugin-container",
        "inputs": {
          "serviceName": "nextcloud",
          "cpu": 1,
          "mem": 2,
          "initialDelaySeconds": 1000,
          "servicePath": "/",
          "uploadType": "image",
          "imageInfo": {
            "imageUrl": "ccr.ccs.tencentyun.com/tcbimages/nextcloud:21"
          },
          "containerPort": 80,
          "customLogs": "stdout,/dev/stdout,/dev/stderr",
          "envVariables": {
            "MYSQL_HOST": "{{env.DB_IP}}:{{env.DB_PORT}}",
            "MYSQL_USER": "{{env.MYSQL_USERNAME}}",
            "MYSQL_PASSWORD": "{{env.MYSQL_PASSWORD}}",
            "MYSQL_DATABASE": "tcb_nextcloud"
          },
          "volumeMounts": {
            "/var/www/html": "nextcloud-cfs"
          }
        }
      }
    },
    "requirement": {
      "addons": [{
        "type": "CFS",
        "name": "nextcloud-cfs"
      }, {
        "type": "CynosDB",
        "name": "nextcloud",
        "envMap": {
          "IP": "DB_IP",
          "PORT": "DB_PORT",
          "USERNAME": "MYSQL_USERNAME",
          "PASSWORD": "MYSQL_PASSWORD"
        }
      }]
    }
  }
}